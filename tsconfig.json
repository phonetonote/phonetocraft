{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "amd",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2019"
    ],
    "typeRoots": [
      "./node_modules/@craftdocs/craft-extension-api"
    ]
  },
  "include": [
    "**/*.ts"
  ],
}
